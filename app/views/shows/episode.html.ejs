<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><%= episode.title %></h3>
  </div>
  <div class="panel-body">
    <div class="media show">
      <div class="media-body">
        <p class="lead">Season <%= episode.season %> - Episode <%= episode.episode %></p>
        <p><%= moment(episode.first_aired * 1000).format('LL') %></p>
        <p><%= episode.overview %></p>
        <% if (episode.torrents && episode.torrents.length > 0) { %>
          <% for (var k=0; k < episode.torrents.length; k++) { %>
            <div class="well">
              <p>
                <a class="btn btn-sm btn-warning" href="<%= baseURL %>/stream?id=<%= imdb_id %>&show=1&season=<%= episode.season %>&episode=<%= episode.episode %>&file=<%= encodeURIComponent(episode.torrents[k].url) %>">
                <span class="glyphicon glyphicon-play"></span> WATCH EPISODE</a>
              </p>
            </div>
          <% } %>
        <% } %>
      </div>
    </div>
  </div>
</div>
